<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">

 <!--TYPEALIAS 설정 DOES NOT WORK!!-->
<configuration>
    <!--    VO객체 설정-->
    <typeAliases>
        <typeAlias alias="hashmap" type="java.util.HashMap" />
        <typeAlias alias="Int" type="java.lang.Integer" />
        <typeAlias alias="Board" type="com.carrot.springmvc.app.board.model.BoardDTO"/>
        <typeAlias alias="BoardNS" type="com.carrot.springmvc.app.board.dao.BoardDAO"/>
    </typeAliases>
    <environments default = "development">
        <environment id="development">
            <transactionManager type="JDBC" />
            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.jdbc.Driver" />
                <property name="url" value="jdbc:mysql://localhost/interview_assignment_db"/>
                <property name="username" value="user"/>
                <property name="password" value="pass"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="classpath:mybatis/mapper/boardMapperXML.xml" />
    </mappers>
</configuration>